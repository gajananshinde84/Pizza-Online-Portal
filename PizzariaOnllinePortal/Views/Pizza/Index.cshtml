@model IEnumerable<Pizza>
@{

    ViewBag.Title = "Pizza List";
}
<div class="card-group">
    @foreach (var pizza in Model)
    {
        var photoPath = "~/images/" + (pizza.ImageUrl ?? "noimage.png");
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@pizza.PizzaName</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="pizza" asp-action="details" asp-route-id="@pizza.PizzaId"
                    class="btn btn-primary m-1">View</a>                
                <a  asp-action="edit" asp-controller="pizza" 
                   asp-route-id="@pizza.PizzaId" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
