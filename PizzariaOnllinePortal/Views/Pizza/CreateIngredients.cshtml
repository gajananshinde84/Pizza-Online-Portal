@model CreateIngredientViewModel
@{
    ViewBag.Title = "Create Ingredient Entry";
}

<form enctype="multipart/form-data" asp-controller="pizza" asp-action="CreateIngredients" method="post" class="mt-3">
    <div class="form-check-label row">
        <label asp-for="IngredientName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IngredientName" class="form-control" placeholder="IngredientName" />
            <span asp-validation-for="IngredientName" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-check-label row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-check-label row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add Ingredient</button>
        </div>
    </div>
</form>