@model PizzaCreateViewModel
@{
    ViewBag.Title = "Create Pizza Entry";
}

<form enctype="multipart/form-data" asp-controller="pizza" asp-action="Create" method="post" class="mt-3">
    <div class="form-check-label row">
        <label asp-for="PizzaName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PizzaName" class="form-control" placeholder="PizzaName" />
            <span asp-validation-for="PizzaName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check-label row">
        <label asp-for="PizzaType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PizzaType" class="form-control" placeholder="PizzaType" />
            <span asp-validation-for="PizzaType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check-label row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check-label row">
        <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Amount" class="form-control" placeholder="Amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check-label row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add Pizza</button>
        </div>
    </div>
</form>